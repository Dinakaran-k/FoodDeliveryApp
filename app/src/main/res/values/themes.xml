<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="Theme.FoodDeliveryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <!-- Add Splash Screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color to match your app's primary color -->
        <item name="windowSplashScreenBackground">@color/purple_700</item>

        <!-- Use the splash icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>


        <!-- Status bar color for splash screen -->
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>
</resources>